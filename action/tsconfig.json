{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "rootDir": "../",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "../dist-action",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "include": ["../action/**/*", "../src/**/*"]
}
