{
  "name": "cross-opensource-template",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Open Source Project Template from the Cross-Cutting team",
  "packageManager": "pnpm@9.4.0",
  "scripts": {
    "eslint": "eslint",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "prepare": "husky install",
    "check:spell": "cspell .",
    "check:license:compliance": "cross-env node ./tools/license-compliance/check-and-report.js"
  },
  "devDependencies": {
    "@eslint/js": "9.13.0",
    "@eslint/json": "0.6.0",
    "@eslint/markdown": "6.2.1",
    "cross-env": "7.0.3",
    "cspell": "8.15.5",
    "eslint": "9.7.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "globals": "^15.12.0",
    "husky": "9.0.11",
    "license-checker": "25.0.1",
    "lint-staged": "15.2.10",
    "yaml": "2.6.0"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.mjs": "eslint",
    "*.cjs": "eslint",
    "*.json": "eslint",
    "*.md": "eslint",
    "*.*": "cspell --no-must-find-files"
  },
  "engines": {
    "node": "22.x",
    "pnpm": "9.x"
  },
  "license": "MPL-2.0"
}
